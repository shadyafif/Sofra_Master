<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/edittext">

    <ImageView
        android:id="@+id/ResOffersImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/ResOffersprice"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ResOfferstitle"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/ResOfferstitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/ResOffersImage"
        android:text="@string/Offer"

        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ResOffersName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ResOfferstitle"
        android:layout_margin="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/ResOffersImage"
        android:text="@string/Resturant"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linaer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ResOffersName"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/ResOffersImage"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ResOfferStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ResOffersName"
            android:layout_margin="5dp"
            android:layout_toStartOf="@id/ResOffersImage"
            android:text=""
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dateEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ResOffersName"
            android:layout_margin="5dp"
            android:layout_toStartOf="@id/ResOffersImage"
            android:text="@string/OfferStart"
            android:textSize="12sp"
            android:textStyle="bold" />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linaer1"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/ResOffersImage"
        android:gravity="end"
        android:orientation="horizontal">







        <TextView
            android:id="@+id/ResOffersEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ResOffersName"
            android:layout_margin="5dp"
            android:layout_toStartOf="@id/ResOffersImage"
            android:text=""
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ResOffersName"
            android:layout_margin="5dp"
            android:layout_toStartOf="@id/ResOffersImage"
            android:text="@string/OfferEnd"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/ResOffersprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/linear"
        android:layout_below="@+id/linear"
        android:text="@string/Price"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>

