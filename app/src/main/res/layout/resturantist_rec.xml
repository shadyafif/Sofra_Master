<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:background="@drawable/edittext"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ResturantListimg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"

        android:src="@drawable/ic_profile" />

    <LinearLayout
        android:id="@+id/ln"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@+id/ResturantListimg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtResturantListName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="20dp"
            android:text="@string/Resturant"
            android:textSize="15sp"
            android:textStyle="bold" />





        <RatingBar
            android:id="@+id/ResturantListRating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="2.0"
            android:stepSize="1.0" />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@+id/ln"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtResturantListStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_check"
            android:text="@string/Open"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linaer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"

            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtResturantListMini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"

                android:text=""
                android:textSize="12sp" />

            <TextView
                android:id="@+id/RLMini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"

                android:text="@string/MiniCharger"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"

            android:gravity="end"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtResturantListDelivary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"

                android:text=""
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtRLDelivary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"

                android:text="@string/Delivary"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/txtResturantListCatagory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/Catagory"
        android:layout_margin="10dp"
        android:textSize="12sp" />


</RelativeLayout>