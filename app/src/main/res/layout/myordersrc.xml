<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/edittext">


    <ImageView
        android:id="@+id/imgMyOrders"
        android:layout_width="105dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_person"
        android:layout_alignParentEnd="true"/>



    <TextView
        android:id="@+id/txtMyOrdersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_toStartOf="@+id/imgMyOrders"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/txtMyOrdersNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
 />

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMyOrdersTotal"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnMyOrdersDileverd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Refused"
            android:layout_marginEnd="10dp"

            android:background="@drawable/bgbtnrefuse"/>

        <Button
            android:id="@+id/btnMyOrdersRefusal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Deliverd"
            android:background="@drawable/bgbtn_login"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/txtMyOrdersNum"/>

    <TextView
        android:id="@+id/txtMyOrdersPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/imgMyOrders"
        android:layout_below="@+id/txtMyOrdersTitle"/>

    <TextView
        android:id="@+id/txtMyOrdersDilevery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/imgMyOrders"
        android:layout_below="@+id/txtMyOrdersPrice"/>

    <TextView
        android:id="@+id/txtMyOrdersTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/imgMyOrders"
        android:layout_below="@+id/txtMyOrdersDilevery"/>


</RelativeLayout>